<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiplayerView">

    <TextView
        android:id="@+id/playerOneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER ONE"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/playerTwoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER TWO"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/button_00"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/playerOneTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_01"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="@+id/button_00"
        app:layout_constraintLeft_toRightOf="@+id/button_00"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_02"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="@+id/button_01"
        app:layout_constraintLeft_toRightOf="@+id/button_01"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_10"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@+id/button_00"
        app:layout_constraintLeft_toLeftOf="@+id/button_00"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_11"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="@+id/button_10"
        app:layout_constraintLeft_toRightOf="@+id/button_10"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_12"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="@+id/button_11"
        app:layout_constraintLeft_toRightOf="@+id/button_11"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_20"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@+id/button_10"
        app:layout_constraintLeft_toLeftOf="@+id/button_10"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_21"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="@+id/button_20"
        app:layout_constraintLeft_toRightOf="@+id/button_20"
        android:backgroundTint="#413F43"
        />

    <Button
        android:id="@+id/button_22"
        android:textSize="60sp"
        android:text=""
        android:textStyle="bold"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="@+id/button_21"
        app:layout_constraintLeft_toRightOf="@+id/button_21"
        android:backgroundTint="#413F43"
        />

    <TextView
        android:id="@+id/gameID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="GAME ID: XXXXXX"
        android:textAlignment="center"
        android:textColor="#000000"
        android:backgroundTint="#7384d1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/button_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>