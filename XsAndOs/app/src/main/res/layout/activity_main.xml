<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/playerOneTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xs and Os"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <Button
        android:id="@+id/singleBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SINGLE PLAYER"
        android:textColor="#000000"
        android:backgroundTint="#7384d1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/playerOneTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/multiBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="MULTIPLAYER"
        android:textColor="#000000"
        android:backgroundTint="#7384d1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/singleBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>