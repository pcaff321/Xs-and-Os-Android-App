<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinOrCreate">

    <TextView
        android:id="@+id/playerOneTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MULTIPLAYER GAME"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <EditText
        android:id="@+id/codeBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ENTER CODE HERE"
        android:textColor="#000000"
        android:textAlignment="center"
        android:background="#00000000"
        android:backgroundTint="#7384d1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/playerOneTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CREATE GAME"
        android:textColor="#000000"
        android:backgroundTint="#7384d1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/codeBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="JOIN GAME"
        android:textColor="#000000"
        android:backgroundTint="#7384d1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/createBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>